[
  {
    "id": "trigger-dispatch",
    "execute-command": "/usr/bin/php",
    "command-working-directory": "/app",
    "response-headers":
    [
      {
        "name": "Access-Control-Allow-Origin",
        "value": "*"
      }
    ],
    "pass-arguments-to-command":
    [
      {
        "source": "string",
        "name": "console.php"
      },
      {
        "source": "string",
        "name": "app:dispatch"
      },
      {
        "source": "string",
        "name": "config-update"
      }
    ],
    "trigger-rule":
    {
      "and": [
        {
          "match":
          {
            "type": "payload-hmac-sha1",
            "secret": "{{ getenv "WEBHOOK_SECRET" }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  },
  {
    "id": "update-index",
    "execute-command": "/usr/bin/php",
    "command-working-directory": "/app",
    "response-headers":
    [
      {
        "name": "Access-Control-Allow-Origin",
        "value": "*"
      }
    ],
    "pass-arguments-to-command":
    [
      {
        "source": "string",
        "name": "console.php"
      },
      {
        "source": "string",
        "name": "app:rebuild"
      },
      {
        "source": "payload",
        "name": "repository.full_name"
      }
    ],
    "trigger-rule":
    {
      "and": [
        {
          "match":
          {
            "type": "payload-hmac-sha1",
            "secret": "{{ getenv "WEBHOOK_SECRET" }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  },
  {
    "id": "update-repository",
    "execute-command": "/usr/bin/make",
    "command-working-directory": "/app",
    "response-headers":
    [
      {
        "name": "Access-Control-Allow-Origin",
        "value": "*"
      }
    ],
    "pass-arguments-to-command":
    [
      {
        "source": "string",
        "name": "update-repository"
      },
      {
        "source": "string",
        "name": "dist"
      }
    ],
    "trigger-rule":
    {
      "and": [
        {
          "match":
          {
            "type": "payload-hmac-sha1",
            "secret": "{{ getenv "WEBHOOK_UPDATE_SECRET" }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  }
]

