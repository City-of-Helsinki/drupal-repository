[
  {
    "id": "update-release-note",
    "execute-command": "/usr/bin/php",
    "command-working-directory": "{{ getenv "PROJECT_DIR" }}",
    "response-headers":
    [
      {
        "name": "Access-Control-Allow-Origin",
        "value": "*"
      }
    ],
    "pass-arguments-to-command":
    [
      {
        "source": "string",
        "name": "console.php"
      },
      {
        "source": "string",
        "name": "changelog:project-release"
      },
      {
        "source": "string",
        "name": "--project"
      },
      {
        "source": "payload",
        "name": "repository.full_name"
      },
      {
        "source": "string",
        "name": "--base"
      },
      {
        "source": "payload",
        "name": "release.tag_name"
      }
    ],
    "trigger-rule":
    {
      "and": [
        {
          "match":
          {
            "type": "payload-hmac-sha1",
            "secret": "{{ getenv "WEBHOOK_UPDATE_SECRET" }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "value",
            "value": "published",
            "parameter":
            {
              "source": "payload",
              "name": "action"
            }
          }
        },
      ]
    }
  },
  {
    "id": "update-automation-pull-request",
    "execute-command": "/usr/bin/php",
    "command-working-directory": "{{ getenv "PROJECT_DIR" }}",
    "response-headers":
    [
      {
        "name": "Access-Control-Allow-Origin",
        "value": "*"
      }
    ],
    "pass-arguments-to-command":
    [
      {
        "source": "string",
        "name": "console.php"
      },
      {
        "source": "string",
        "name": "changelog:automation-pull-request"
      },
      {
        "source": "string",
        "name": "--project"
      },
      {
        "source": "payload",
        "name": "repository.full_name"
      },
      {
        "source": "string",
        "name": "--base"
      },
      {
        "source": "string",
        "name": "dev"
      },
      {
        "source": "string",
        "name": "--head"
      },
      {
        "source": "string",
        "name": "update-configuration"
      },
      {
        "source": "string",
        "name": "--number"
      },
      {
        "source": "payload",
        "name": "pull_request.number"
      }
    ],
    "trigger-rule":
    {
      "and": [
        {
          "match":
          {
            "parameter":
            {
              "source": "payload",
              "name": "pull_request.head.ref"
            },
            "type": "value",
            "value": "update-configuration"
          }
        },
        {
          "match":
          {
            "type": "payload-hmac-sha1",
            "secret": "{{ getenv "WEBHOOK_UPDATE_SECRET" }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "or": [
            {
              "match":
              {
                "parameter":
                {
                  "source": "payload",
                  "name": "action"
                },
                "type": "value",
                "value": "opened"
              }
            },
            {
              "match":
              {
                "parameter":
                {
                  "source": "payload",
                  "name": "action"
                },
                "type": "value",
                "value": "synchronize"
              }
            }
          ]
        }
      ]
    }
  },
  {
    "id": "trigger-dispatch",
    "execute-command": "/usr/bin/php",
    "command-working-directory": "{{ getenv "PROJECT_DIR" }}",
    "response-headers":
    [
      {
        "name": "Access-Control-Allow-Origin",
        "value": "*"
      }
    ],
    "pass-arguments-to-command":
    [
      {
        "source": "string",
        "name": "console.php"
      },
      {
        "source": "string",
        "name": "app:dispatch"
      },
      {
        "source": "string",
        "name": "config-update"
      }
    ],
    "trigger-rule":
    {
      "and": [
        {
          "match":
          {
            "type": "value",
            "value": "published",
            "parameter":
            {
              "source": "payload",
              "name": "action"
            }
          }
        },
        {
          "match":
          {
            "type": "payload-hmac-sha1",
            "secret": "{{ getenv "WEBHOOK_UPDATE_SECRET" }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  },
  {
    "id": "update-index",
    "execute-command": "/usr/bin/php",
    "command-working-directory": "{{ getenv "PROJECT_DIR" }}",
    "response-headers":
    [
      {
        "name": "Access-Control-Allow-Origin",
        "value": "*"
      }
    ],
    "pass-arguments-to-command":
    [
      {
        "source": "string",
        "name": "console.php"
      },
      {
        "source": "string",
        "name": "queue:package"
      },
      {
        "source": "payload",
        "name": "repository.full_name"
      }
    ],
    "trigger-rule":
    {
      "and": [
        {
          "match":
          {
            "type": "payload-hmac-sha1",
            "secret": "{{ getenv "WEBHOOK_SECRET" }}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  }
]

